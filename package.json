{
  "name": "northbrook",
  "version": "1.1.2",
  "description": "A configurable tool for managing projects with NPM",
  "main": "lib/cli.js",
  "bin": {
    "northbrook": "lib/cli.js",
    "nb": "lib/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/northbrookjs/northbrook.git"
  },
  "keywords": [
    "reproducible",
    "versionable",
    "pluggable",
    "monorepo",
    "lerna",
    "project",
    "management"
  ],
  "author": "Tylor Steinberger <tlsteinberger167@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/northbrookjs/northbrook/issues"
  },
  "homepage": "https://github.com/northbrookjs/northbrook#readme",
  "config": {
    "ghooks": {
      "commit-msg": "node ./node_modules/.bin/validate-commit-msg"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert",
        "release"
      ]
    }
  },
  "scripts": {
    "test:lint": "eslint lib/*.js",
    "test:unit": "echo 'terrible developer with no tests'",
    "test": "npm run test:lint && npm run test:unit",
    "commit": "node ./lib/cli.js commit",
    "release": "node ./lib/cli.js release",
    "postpublish": "greenkeeper-postpublish"
  },
  "dependencies": {
    "add-stream": "^1.0.0",
    "commander": "^2.9.0",
    "commitizen": "^2.8.6",
    "conventional-changelog": "^1.1.0",
    "find-config": "^1.0.0",
    "ghooks": "^1.3.2",
    "khaos": "^0.9.3",
    "mkdirp": "^0.5.1",
    "prompt-for": "^1.1.2",
    "shelljs": "^0.7.3",
    "symlink-or-copy": "^1.1.6",
    "tempfile": "^1.1.1",
    "validate-commit-msg": "^2.7.0"
  },
  "devDependencies": {
    "eslint": "^3.3.1",
    "eslint-config-standard": "^5.3.5",
    "eslint-plugin-promise": "^2.0.1",
    "eslint-plugin-standard": "^2.0.0",
    "greenkeeper-postpublish": "^1.0.1"
  }
}
